from vaderSentiment.vaderSentiment import SentimentIntensityAnalyzer
import pandas as pd

texts = [
    "I absolutely love this product! It's amazing and works perfectly.",
    "This is the worst experience I've ever had. Very disappointed.",
    "The product is okay, nothing special but not bad either.",
    "Excellent service! Highly recommend to everyone.",
    "Terrible quality and poor customer support.",
    "It's decent for the price. Could be better.",
    "Outstanding! Best purchase I've made this year.",
    "Not satisfied with the quality. Expected better.",
    "Good value for money. Happy with my purchase.",
    "Horrible experience. Will never buy again."
]

analyzer = SentimentIntensityAnalyzer()

def get_sentiment(text):
    c = analyzer.polarity_scores(text)['compound']
    return 'Positive' if c >= 0.05 else 'Negative' if c <= -0.05 else 'Neutral'

results = [
    {**analyzer.polarity_scores(t), "Text": t, "Sentiment": get_sentiment(t)}
    for t in texts
]

df = pd.DataFrame(results)[["Text", "pos", "neu", "neg", "compound", "Sentiment"]]
print("\nSentiment Summary:\n", df.to_string(index=False))

counts = df['Sentiment'].value_counts()
print("\nDistribution:\n", counts)
print("\nAverage Compound Score:", df['compound'].mean())
print("Most Positive:", df['compound'].max())
print("Most Negative:", df['compound'].min())
